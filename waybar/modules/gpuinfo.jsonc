"custom/gpuinfo": {
    "exec": " ~/Hyprdots/dotfiles/hypr/scripts/gpuinfo.sh",
    "return-type": "json",
    "format": " {}",
    "interval": 5, // once every 5 seconds
    "tooltip": true,
    "max-length": 1000,
    "on-click": "~/Hyprdots/dotfiles/hypr/scripts/gpuinfo.sh --toggle",
},

"custom/gpuinfo#nvidia": {
    "exec": " ~/Hyprdots/dotfiles/hypr/scripts/gpuinfo.sh --use nvidia ",
    "return-type": "json",
    "format": " {}",
    "interval": 5, // once every 5 seconds
    "tooltip": true,
    "max-length": 1000,
},

